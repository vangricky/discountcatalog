<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amazon Affiliate Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #F7F4F3; }
        .search-bar { background: white; border-radius: 30px; }
        .search-bar input { border: none; outline: none; width: 100%; padding: 10px; }
        .search-bar button { background: #5B8C5A; color: white; padding: 10px 20px; border-radius: 0 30px 30px 0; }
        .product-image { object-fit: cover; width: 100%; height: 250px; }
    </style>
</head>
<body class="font-sans">

    <!-- Navbar -->
    <nav class="bg-[#5B8C5A] text-white p-4 shadow-md">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <div>
                <img src="/images/discountcataloglogo.png" alt="Discount Catalog Logo" class="h-12">
            </div>
            <ul class="flex space-x-6">
                <li><a href="/" class="hover:underline">Home</a></li>
                <li><a href="/about" class="hover:underline">About Us</a></li>
                <li><a href="/contact" class="hover:underline">Contact</a></li>
                <li><a href="/deals/500" class="hover:underline">Deals under $500</a></li>
                <li><a href="/deals/250" class="hover:underline">Deals under $250</a></li>
                <li><a href="/deals/100" class="hover:underline">Deals under $100</a></li>
                <li><a href="/deals/50" class="hover:underline">Deals under $50</a></li>
            </ul>
        </div>
    </nav>

    <div class="max-w-4xl mx-auto p-6">
        <!-- Search Bar -->
        <form method="GET" action="/" class="search-bar flex items-center p-2 shadow-lg mb-6">
            <input type="text" name="search" value="<%= search %>" placeholder="Search for deals..." class="flex-grow">
            <button type="submit">üîç</button>
        </form>

        <!-- Price Filter -->
        <form method="GET" action="/" class="mb-6 flex justify-end">
            <select name="maxPrice" onchange="this.form.submit()" class="p-2 bg-white border rounded">
                <option value="">Filter by Price</option>
                <option value="50" <%= maxPrice == 50 ? "selected" : "" %>>Under $50</option>
                <option value="100" <%= maxPrice == 100 ? "selected" : "" %>>Under $100</option>
                <option value="250" <%= maxPrice == 250 ? "selected" : "" %>>Under $250</option>
                <option value="500" <%= maxPrice == 500 ? "selected" : "" %>>Under $500</option>
            </select>
        </form>

        <!-- Product Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
                <div class="bg-white p-4 shadow-lg rounded-lg">
                    <img src="<%= product.image %>" class="product-image rounded">
                    <h2 class="text-xl font-semibold mt-2"><%= product.name %></h2>
                    <p class="text-green-600 text-lg font-bold">$<%= product.price %></p>
                    <a href="<%= product.link %>" target="_blank" class="mt-2 block bg-[#5B8C5A] text-white px-4 py-2 rounded text-center hover:bg-green-700">
                        Buy on Amazon
                    </a>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
