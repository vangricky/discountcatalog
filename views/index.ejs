 // Toggle dropdown function
 function toggleDropdown(id) {
        const dropdown = document.getElementById(id);
        dropdown.classList.toggle("hidden");

        // Close other dropdown if open
        document.querySelectorAll(".dropdown").forEach((el) => {
            if (el.id !== id && !el.classList.contains("hidden")) {
                el.classList.add("hidden");
            }
        });
    }

    document.getElementById("menuToggle").addEventListener("click", function () {
        document.getElementById("mobileMenu").classList.toggle("hidden");
    });

    // Close dropdown when clicking outside
    document.addEventListener("click", function (event) {
        if (!event.target.closest(".relative")) {
            document.querySelectorAll(".dropdown").forEach((dropdown) => {
                dropdown.classList.add("hidden");
            });
        }
    });

    document.addEventListener("DOMContentLoaded", initDropdowns);

    function toggleDealsDropdown() {
        document.getElementById("dealsDropdown").classList.toggle("hidden");
    }

    function toggleDepartmentsDropdown() {
        document.getElementById("departmentsDropdown").classList.toggle("hidden");
    }

    document.addEventListener("click", function (event) {
    let dealsDropdown = document.getElementById("dealsDropdown");
    let departmentsDropdown = document.getElementById("departmentsDropdown");

    if (!event.target.closest("#dealsDropdown") && !event.target.closest("button[onclick='toggleDealsDropdown()']")) {
        dealsDropdown.classList.add("hidden");
    }

    if (!event.target.closest("#departmentsDropdown") && !event.target.closest("button[onclick='toggleDepartmentsDropdown()']")) {
        departmentsDropdown.classList.add("hidden");
    }
});

function initDropdowns() {
        document
            .getElementById("dealsButton")
            .addEventListener("click", (e) => {
                e.stopPropagation();
                toggleDropdown("dealsDropdown");
            });

        document
            .getElementById("departmentsButton")
            .addEventListener("click", (e) => {
                e.stopPropagation();
                toggleDropdown("departmentsDropdown");
            });
    }
    window.addEventListener("scroll", function() {
        let stickyNav = document.getElementById("stickyNav");
        let scrollTopBtn = document.getElementById("scrollTop");

        if (window.scrollY > 150) {
            stickyNav.classList.add("show");
            scrollTopBtn.style.display = "block";
        } else {
            stickyNav.classList.remove("show");
            scrollTopBtn.style.display = "none";
        }
    });

    function scrollToTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function applyFilter() {
    const dealsValue = document.getElementById("dealsFilter").value;
    const departmentsValue = document.getElementById("departmentsFilter").value;
    
    let queryParams = new URLSearchParams(window.location.search);
    
    if (dealsValue) {
        queryParams.set("deals", dealsValue); // Ensure it matches the backend
    } else {
        queryParams.delete("deals");
    }

    if (departmentsValue) {
        queryParams.set("department", departmentsValue);
    } else {
        queryParams.delete("department");
    }

    window.location.href = window.location.pathname + "?" + queryParams.toString();
}

</script>

