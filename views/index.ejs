<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amazon Affiliate Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Monomakh&display=swap" rel="stylesheet">
    <style>
        body { background-color: #F7F4F3; }
        .search-bar { background: white; border-radius: 30px; }
        .search-bar input { border: none; outline: none; width: 100%; padding: 10px; }
        .search-bar button { color: white; padding: 10px 20px; }
        .product-image { object-fit: cover; width: 100%; height: 250px; }
        .header-title { font-family: 'Monomakh', sans-serif; }
    </style>
</head>
<body class="font-sans">

<!-- Navbar -->
<nav class="bg-[#5B8C5A] text-white p-4 shadow-md">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
        <!-- Logo -->
        <div>
            <a href="/">
                <img src="/images/discountcataloglogo.png" alt="Discount Catalog Logo" class="h-12">
            </a>
        </div>

        <!-- Website Name -->
        <div class="text-5xl font-bold header-title">
            Discount Catalog
        </div>

        <!-- Navigation Links -->
        <ul class="flex space-x-6">
            <li>
                <a href="/" class="relative pb-2 transition duration-300 after:absolute after:left-0 after:bottom-0 after:h-0.5 after:bg-white after:w-0 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Home</a>
            </li>
            <li>
                <a href="/about" class="relative pb-2 transition duration-300 after:absolute after:left-0 after:bottom-0 after:h-0.5 after:bg-white after:w-0 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">About Us</a>
            </li>
            <li>
                <a href="/contact" class="relative pb-2 transition duration-300 after:absolute after:left-0 after:bottom-0 after:h-0.5 after:bg-white after:w-0 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Contact</a>
            </li>
        </ul>
        
        
    </div>
</nav>

    <div class="max-w-4xl mx-auto p-6">
        <!-- Search Bar -->
        <form method="GET" action="/" class="search-bar flex items-center p-2 shadow-lg mb-6">
            <input type="text" name="search" value="<%= search %>" placeholder="Search for deals..." class="flex-grow">
            <button type="submit">üîç</button>
        </form>

<!-- Filters Section -->
<div class="flex space-x-4 mb-6">

    <!-- Deals Under Dropdown -->
    <div class="relative">
        <button onclick="toggleDealsDropdown()" class="p-2 bg-white border rounded flex items-center">
            Deals under... ‚ñº
        </button>
        <div id="dealsDropdown" class="hidden absolute mt-2 bg-white border rounded shadow-lg">
            <a href="/deals/50" class="block px-4 py-2 hover:bg-gray-100">Under $50</a>
            <a href="/deals/100" class="block px-4 py-2 hover:bg-gray-100">Under $100</a>
            <a href="/deals/250" class="block px-4 py-2 hover:bg-gray-100">Under $250</a>
            <a href="/deals/500" class="block px-4 py-2 hover:bg-gray-100">Under $500</a>
        </div>
    </div>

<!-- Departments Dropdown -->
<div class="relative">
    <button onclick="toggleDepartmentsDropdown()" class="p-2 bg-white border rounded flex items-center">
        Departments ‚ñº
    </button>
    <div id="departmentsDropdown" class="hidden absolute mt-2 bg-white border rounded shadow-lg max-h-60 overflow-y-auto">
        <% let departments = [
            "All Departments", "Electronics", "Clothing", "Home & Kitchen", "Books", "Toys & Games", "Beauty & Personal Care",
            "Sports & Outdoors", "Health & Household", "Automotive", "Grocery & Gourmet Food", "Pet Supplies", "Baby",
            "Tools & Home Improvement", "Office Products", "Garden & Outdoor", "Industrial & Scientific"
        ]; %>
        <% departments.forEach(dept => { %>
            <a href="/?department=<%= encodeURIComponent(dept) %>" class="block px-4 py-2 hover:bg-gray-100"><%= dept %></a>
        <% }) %>
    </div>
</div>

</div>

<script>
    function toggleDealsDropdown() {
        document.getElementById("dealsDropdown").classList.toggle("hidden");
    }

    function toggleDepartmentsDropdown() {
        document.getElementById("departmentsDropdown").classList.toggle("hidden");
    }
</script>



        <!-- Product Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
                <div class="bg-white p-4 shadow-lg rounded-lg">
                    <img src="<%= product.image %>" class="product-image rounded">
                    <h2 class="text-xl font-semibold mt-2"><%= product.name %></h2>
                    <p class="text-green-600 text-lg font-bold"><%= product.price %></p>
                    <p class="text-red-500 text-md"><%= product.discountPercent %></p>
                    <a href="<%= product.link %>" target="_blank" 
                        class="mt-4 block bg-orange-500 text-white px-4 py-2 rounded text-center transition-colors duration-300 delay-50 hover:bg-orange-600 ">
                         Buy on Amazon
                     </a>
                     
                </div>
            <% }) %>
        </div>
    </div>


